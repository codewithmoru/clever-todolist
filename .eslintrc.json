{
    "env": {
        "browser": true,
        "es2021": true
    },
    "settings": {
        "react": {
          "version": "detect"
        }
      },
    "extends": [
        "plugin:react/recommended",
        "google",
        "prettier"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "no-console": "error",
        "react/jsx-filename-extension": [
            "error",
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "no-use-before-define": [
            "error",
            {
                "variables": false
            }
        ],
        "react/prop-types": "off",
        "react/jsx-props-no-spreading": "off",
        "global-require": "off",
        "semi": [
            "warn",
            "always"
        ],
        "import/prefer-default-export": "off",
        "consistent-return": "off",
        "object-curly-newline": "off",
        "react/jsx-curly-newline": "warn",
        "object-curly-spacing": [
            "warn",
            "always"
        ],
        "react/jsx-curly-spacing": [
            "warn",
            {
                "when": "never",
                "children": {
                    "when": "always"
                },
                "allowMultiline": true
            }
        ],
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "quotes": [
            "warn",
            "single",
            {
                "avoidEscape": true,
                "allowTemplateLiterals": true
            }
        ],
        "jsx-quotes": [
            "warn",
            "prefer-single"
        ],
        "comma-dangle": [
            "warn",
            "never"
        ],
        "react/no-unescaped-entities": "off",
        "require-jsdoc" : "off"
    }
}